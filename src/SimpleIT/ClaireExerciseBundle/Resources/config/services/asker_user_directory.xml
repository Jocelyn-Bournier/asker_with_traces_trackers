<?xml version="1.0" ?>

<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://symfony.com/schema/dic/services" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="simple_it.exercise.asker_user_directory.class">SimpleIT\ClaireExerciseBundle\Service\AskerUserDirectoryService</parameter>
        <parameter key="simple_it.exercise.entity.asker_user_directory.class">SimpleIT\ClaireExerciseBundle\Entity\AskerUserDirectory</parameter>
        <parameter key="simple_it.exercise.repository.asker_user_directory.class">SimpleIT\ClaireExerciseBundle\Repository\AskerUserDirectoryRepository</parameter>
    </parameters>

    <services>
        <!-- Repositories -->
        <service id="simple_it.exercise.repository.asker_user_directory" class="%simple_it.exercise.repository.asker_user_directory.class%">
            <factory service="doctrine.orm.entity_manager" class="%simple_it.exercise.repository.asker_user_directory.class%" method="getRepository"/>
            <argument>%simple_it.exercise.entity.asker_user_directory.class%</argument>
        </service>

        <!-- Services -->
        <service id="simple_it.exercise.asker_user_directory" class="%simple_it.exercise.asker_user_directory.class%">
            <call method="setEntityManager">
                <argument type="service" id="doctrine.orm.entity_manager"/>
            </call>
            <call method="setAskerUserDirectoryRepository">
                <argument type="service" id="simple_it.exercise.repository.asker_user_directory"/>
            </call>
            <call method="setAskerUserRepository">
                <argument type="service" id="simple_it.exercise.repository.user"/>
            </call>
        </service>

    </services>
</container>
