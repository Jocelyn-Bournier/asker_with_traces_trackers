<?xml version="1.0" ?>

<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://symfony.com/schema/dic/services" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="simple_it.exercise.user.class">SimpleIT\ClaireExerciseBundle\Service\User\UserService</parameter>
        <parameter key="simple_it.exercise.entity.user.class">SimpleIT\ClaireExerciseBundle\Entity\AskerUser</parameter>
        <parameter key="simple_it.exercise.repository.user.class">SimpleIT\ClaireExerciseBundle\Repository\AskerUserRepository</parameter>
    </parameters>

    <services>
        <!-- Repositories -->
        <service id="simple_it.exercise.repository.user" class="%simple_it.exercise.repository.user.class%">
            <factory service="doctrine.orm.entity_manager" method="getRepository" class="%simple_it.exercise.repository.user.class%"/>
            <argument>%simple_it.exercise.entity.user.class%</argument>
        </service>

        <!-- Services -->
        <service id="simple_it.exercise.user" class="%simple_it.exercise.user.class%">
            <call method="setEntityManager">
                <argument type="service" id="doctrine.orm.entity_manager"/>
            </call>
            <call method="setUserRepository">
                <argument type="service" id="simple_it.exercise.repository.user"/>
            </call>
        </service>

    </services>
</container>
