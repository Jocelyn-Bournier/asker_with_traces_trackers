<?xml version="1.0" ?>

<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://symfony.com/schema/dic/services" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="simple_it.exercise.directory.class">SimpleIT\ClaireExerciseBundle\Service\Directory\DirectoryService</parameter>
        <parameter key="simple_it.exercise.entity.directory.class">SimpleIT\ClaireExerciseBundle\Entity\Directory</parameter>
        <parameter key="simple_it.exercise.repository.directory.class">SimpleIT\ClaireExerciseBundle\Repository\DirectoryRepository</parameter>
    </parameters>

    <services>
        <!-- Repositories -->
        <service id="simple_it.exercise.repository.directory" class="%simple_it.exercise.repository.directory.class%">
            <factory service="doctrine.orm.entity_manager" method="getRepository" class="%simple_it.exercise.repository.directory.class%"/>
            <argument>%simple_it.exercise.entity.directory.class%</argument>
        </service>

        <!-- Services -->
        <service id="simple_it.exercise.directory" class="%simple_it.exercise.directory.class%">
            <call method="setEntityManager">
                <argument type="service" id="doctrine.orm.entity_manager"/>
            </call>
            <call method="setDirectoryRepository">
                <argument type="service" id="simple_it.exercise.repository.directory"/>
            </call>
            <call method="setAskerUserDirectoryService">
                <argument type="service" id="simple_it.exercise.asker_user_directory"/>
            </call>
	    <call method="setExerciseModelService">
                <argument type="service" id="simple_it.exercise.exercise_model"/>
            </call>
        </service>

    </services>
</container>
